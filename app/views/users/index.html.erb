<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <% if @video.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>
        <ul>
          <% @video.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <!-- モックのため、固定値になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %><!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>  <!-- 固定値 -->
          </tr>
        </table>　 
        <div class='row'>
          <!-- 編集リンクが固定値 -->
          <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(current_user) %>">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        <h2 class="mt-3">New Videos</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
        <%= form_with model: @video, local:true do |f| %>
          <div class="form-group">
              <%= f.label :title, "Title" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :youtube_url, "URL" %>
              <%= f.text_area :youtube_url, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :body, "Opinion" %>
              <%= f.text_area :body, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Submit", class: "btn btn-success" %>
            </div>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <!-- 投稿したuser一覧表示を作成しましょう。 -->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "default-image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>