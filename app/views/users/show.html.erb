<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <!-- モックのため、固定値になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th>DMM太郎</th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>  <!-- 固定値 -->
          </tr>
        </table>　 
        <div class='row'>
          <!-- 編集リンクが固定値 -->
          <a class="btn btn-outline-secondary btn-block" href="/users/1/edit">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        <h2 class="mt-3">New Videos</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
        <%= form_with model: @video, url:'/videos', local:true do |f| %>
          <h4>URL</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Submit' %>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Videos</h2>
        <!-- 投稿した書籍一覧表示を作成しましょう。 -->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>URL</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</main>