<main>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Video</h1>
        <% if @video.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>
            <ul>
              <% @video.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
                <% end %>
            </ul>
          </div>
          <% end %>
            <%= form_with model: @video, local: true do |f| %>
              <div class="form-group">
                <%= f.label :title, "Title" %>
                  <%= f.text_field :title, class: "form-control video_title", id: "video_title" %>
              </div>
              <div class="form-group">
                <%= f.label :youtube_url, "URL" %>
                  <%= f.text_area :youtube_url, class: "form-control", id: "video_youtube_url" %>
              </div>
              <div class="form-group">
                <%= f.label :body, "Opinion" %>
                  <%= f.text_area :body, class: "form-control video_body", id: "video_body" %>
              </div>
              <div class="form-group">
                <%= f.submit 'Update Video', class: 'btn btn-success', data: { disable_with: 'Update Video' } %>
              </div>
              </form>
              <% end %> <a class="show" href="<%= video_path(@video) %>">Show</a> | <a class="back" href="<%= videos_path %>">Back</a>                </div>
    </div>
  </div>
</main>